<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/backgroundDark"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/fragment_video_button"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_poster_placeholder"
        android:scaleType="fitCenter"/>

    <TextView
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/movie_fragment_title"
        android:padding="4dp"
        android:textColor="@color/textColor"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/movie_fragment_star1"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_vote_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/movie_fragment_star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vote_star"
            android:layout_marginLeft="8dp"/>
        <ImageView
            android:id="@+id/movie_fragment_star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vote_star"
            android:layout_marginLeft="8dp"/>
        <ImageView
            android:id="@+id/movie_fragment_star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vote_star"
            android:layout_marginLeft="8dp"/>
        <ImageView
            android:id="@+id/movie_fragment_star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vote_star"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

    <TextView
        android:textSize="18dp"
        android:textColor="@color/textColor"
        android:id="@+id/fragment_movie_description"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>