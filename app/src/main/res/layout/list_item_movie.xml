<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_margin="8dp"
                android:background="@color/backgroundDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/list_movie_poster"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitStart"
        android:src="@drawable/ic_poster_placeholder"/>
    
    <TextView
        android:id="@+id/list_movie_title"
        android:gravity="bottom"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:textSize="18dp"
        android:shadowColor="@color/shadowColor"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_hint"/>
    <TextView
        android:id="@+id/list_movie_overview"
        android:textColor="@color/textColor"
        android:textSize="16dp"
        android:shadowColor="@color/shadowColor"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:maxLength="120"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@+id/list_movie_title"
        android:text="@string/movie_overview_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>